<h1>Add a new topic.</h1>
<%= form_for @changeset, topic_path(@conn, :create), fn f -> %>
    <div class="form-group">
        <%= text_input f, :title, id: "topic", placeholder: "Title",class: "form-control"  %>
        <%= error_tag f, :title  %>
    </div>
    
    <div class="form-group">
        <%= submit "Save Topic", class: "btn btn-primary" %>
    </div>


<% end %>
